{
  "publicPath": "./web",
  "assetsPath": "./web/assets",
  "bsProxy": "127.0.0.1/app_dev.php",
  "watchHtml": "./app/Resources/**/*",

  "symlink": [
    {
      "src": "./node_modules/@fortawesome/fontawesome-free/webfonts/*",
      "dest": "assets/dist/webfonts/"
    },
    {
      "src": "./node_modules/summernote/dist/font/*",
      "dest": "assets/dist/css/font/"
    },
    {
      "src": "./node_modules/leaflet/dist/images/*",
      "dest": "assets/dist/css/images/"
    }
  ],

  "styles": {
    "frontend": {
      "src": [
        "./node_modules/@fortawesome/fontawesome-free/css/solid.css",
        "./node_modules/@fortawesome/fontawesome-free/css/brands.css",
        "./node_modules/@fortawesome/fontawesome-free/css/fontawesome.css",
        "./node_modules/bootstrap/dist/css/bootstrap.css",
        "./node_modules/justifiedGallery/dist/css/justifiedGallery.css",
        "./node_modules/@fancyapps/fancybox/dist/jquery.fancybox.css",
        "./node_modules/leaflet/dist/leaflet.css",
        "./web/assets/sass/frontend.sass"
      ],
      "dest": "assets/dist/css/main.css"
    },
    "admin": {
      "src": [
        "./node_modules/@fortawesome/fontawesome-free/css/solid.css",
        "./node_modules/@fortawesome/fontawesome-free/css/fontawesome.css",
        "./node_modules/startbootstrap-sb-admin-2/css/sb-admin-2.css",
        "./node_modules/select2/dist/css/select2.css",
        "./node_modules/select2-bootstrap4-theme/dist/select2-bootstrap4.css",
        "./node_modules/summernote/dist/summernote-bs4.css",
        "./web/assets/sass/admin.sass"
      ],
      "dest": "assets/dist/css/admin.css"
    }
  },

  "scripts": {
    "frontend": {
      "src": [
        "./node_modules/jquery/dist/jquery.js",
        "./node_modules/bootstrap/dist/js/bootstrap.js",
        "./node_modules/js-cookie/src/js.cookie.js",
        "./node_modules/justifiedGallery/dist/js/jquery.justifiedGallery.js",
        "./node_modules/@fancyapps/fancybox/dist/jquery.fancybox.js",
        "./node_modules/detect_swipe/jquery.detect_swipe.js",
        "./node_modules/leaflet/dist/leaflet.js",
        "./node_modules/@mapbox/leaflet-omnivore/leaflet-omnivore.js",
        "./web/assets/js/frontend.js"
      ],
      "dest": "assets/dist/js/main.js"
    },
    "admin": {
      "src": [
        "./node_modules/jquery/dist/jquery.js",
        "./node_modules/popper.js/dist/umd/popper.js",
        "./node_modules/bootstrap/dist/js/bootstrap.js",
        "./node_modules/js-cookie/src/js.cookie.js",
        "./node_modules/startbootstrap-sb-admin-2/vendor/jquery-easing/jquery.easing.min.js",
        "./node_modules/startbootstrap-sb-admin-2/js/sb-admin-2.js",
        "./node_modules/select2/dist/js/select2.js",
        "./node_modules/select2/dist/js/i18n/de.js",
        "./node_modules/summernote/dist/summernote-bs4.js",
        "./node_modules/summernote/lang/summernote-de-DE.js",
        "./web/assets/js/admin.js"
      ],
      "dest": "assets/dist/js/admin.js"
    }
  }
}
