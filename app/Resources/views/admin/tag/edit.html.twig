{% extends 'admin.html.twig' %}

{% block title %}Edit - {{ tag.name }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">{{ tag.name }}</h1>

        <form id="editTag" class="form-horizontal" action="{{ path('tag_edit', {'id': tag.id}) }}" method="post">
            <input type="hidden" name="edit[id]" value="{{ tag.id }}"/>

            <div id="deleteModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Delete?</h4>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete the tag <strong>{{ tag.name }}</strong>?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="{{ path('tag_delete', {'id': tag.id}) }}" class="btn btn-danger">Delete</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="name">Name*</label>
                <div class="col-sm-10">
                    <input id="name" class="form-control" type="text" name="edit[name]" value="{{ tag.name }}" required="required"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" type="submit" name="submit">Submit form</button>
                    <button class="btn btn-danger pull-right" type="button" data-toggle="modal" data-target="#deleteModal">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}
