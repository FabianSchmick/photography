{% extends 'admin.html.twig' %}

{% block title %}{{ 'new.tag'|trans }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">{{ 'new.tag'|trans }}</h1>

        <form id="newTag" class="form-horizontal" action="{{ path('tag_new') }}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="MAX_FILE_SIZE" value="16777216"/> {# 16MB #}

            <div class="form-group">
                <label class="control-label col-sm-2" for="name">{{ 'name'|trans }}*</label>
                <div class="col-sm-10">
                    <input id="name" class="form-control" type="text" name="new[name]" required="required"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="description">{{ 'description'|trans }}</label>
                <div class="col-sm-10">
                    <textarea id="description" class="form-control" name="new[description]">{{ entry.description }}</textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="image">{{ 'image'|trans }}</label>
                <div class="col-sm-10">
                    <input id="image" type="file" name="new[image]" accept="image/*"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" type="submit" name="submit">{{ 'submit'|trans }}</button>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}
