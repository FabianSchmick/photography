{% extends 'admin.html.twig' %}

{% block title %}New Entry{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">New Entry</h1>

            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="flash-notice alert alert-success fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ flash_message|raw }}
                </div>
            {% endfor %}

            <form id="newEntry" class="form-horizontal" action="{{ path('entry_new') }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="MAX_FILE_SIZE" value="16777216" /> {# 16MB #}

                <div class="form-group">
                    <label class="control-label col-sm-2" for="title">Title*</label>
                    <div class="col-sm-10">
                        <input id="title" class="form-control" type="text" name="new[title]" required="required"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="description">Description</label>
                    <div class="col-sm-10">
                        <textarea id="description" class="form-control" name="new[description]"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="author">Author</label>
                    <div class="col-sm-10">
                        <input id="author" class="form-control" type="text" name="new[author]"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="image">Image*</label>
                    <div class="col-sm-10">
                        <input id="image" type="file" name="new[image]" required="required" accept="image/*"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="location">Location</label>
                    <div class="col-sm-10">
                        <input id="location" class="form-control" type="text" name="new[location]"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="timestamp">Timestamp</label>
                    <div class="col-sm-10">
                        <input id="timestamp" class="form-control" type="date" name="new[timestamp]"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="tags">Tags*</label>
                    <div class="col-sm-10">
                        <div style="padding-right: 15px">
                            <select id="tags" class="select2 form-control" name="new[tags][]" required="required" multiple="multiple">
                                {% for tag in tags %}
                                    <option value="{{ tag.name }}" >{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-success" type="submit" name="submit">Submit form</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
