<div class="entry">
    <article class="entry-inner">
        <div class="entry-image">
            <img src="{{ vich_uploader_asset(entry.image, 'file')|imagine_filter('entry_show') }}" alt="{{ entry.title }}">
        </div>
        <div class="entry-info">
            <h2 class="entry-title">
                {{ entry.title }}
            </h2>
            {{ entry.description|raw }}
            <ul class="list-unstyled meta">
                {% if entry.location.name is defined %}<li class="entry-location"><strong>{{ 'location'|trans }}</strong>: {{ entry.location.name }}</li>{% endif %}
                {% if entry.author.name is defined %}<li class="entry-author"><strong>{{ 'author'|trans }}</strong>: {{ entry.author.name }}</li>{% endif %}
                <li class="entry-timestamp"><strong>{{ 'timestamp'|trans }}</strong>: {{ entry.timestamp|date("d.m.Y") }}</li>
            </ul>
            <ul class="list-unstyled clearfix tags">
                {% for tag in entry.tags %}
                    <li><a href="{{ path('tag_show', {'slug': tag.slug}) }}">{{ tag.name }}</a></li>
                {% endfor %}
            </ul>
            <a class="btn" href="{{ vich_uploader_asset(entry.image, 'file') }}" target="_blank"><i class="fa fa-arrows-alt" aria-hidden="true"></i> {{ 'fullscreen'|trans }}</a>
        </div>
    </article>
</div>
