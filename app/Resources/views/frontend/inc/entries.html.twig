{% for entry in entries %}
    {% set url = path('entry_detail', {'slug': entry.slug}) %}
    {% set src = path('ajax_entry_detail', {'id': entry.id}) %}

    <a href="{{ url }}" data-fancybox="entries" data-src="{{ src }}" data-type="ajax" class="entry">
        <img src="{{ image_directory }}/thumb/{{ entry.image }}" alt="{{ entry.title }}">
        <div class="title">{{ entry.title }}</div>
    </a>
{% endfor %}
