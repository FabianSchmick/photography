{% extends 'base.html.twig' %}

{% block metaDesc %}{{ 'introduction.tag'|trans }} {{ tag.name }}{% endblock %}
{% block title %}{{ 'tag'|trans }} {{ tag.name }}{% endblock %}

{% block cover %}
    <section id="cover" class="parallaxContainer">
        <div class="parallax">
        </div>
    </section>
{% endblock %}
{% block content %}
    <section id="content" class="container">
        <h1>{{ tag.name }}</h1>

        <div class="textContainer text-center">
            {% if tag.description != "" %}
                {{ tag.description|raw }}
            {% else %}
                <p>{{ 'introduction.tag'|trans }} <strong>{{ tag.name }}</strong></p>
            {% endif %}
        </div>

        <div id="entries" class="list-unstyled">
            {{ render(controller('AppBundle:Default:paginateByTag', {'slug': tag.slug, 'page': 1 })) }}

            <div id="spinner" class="spinner" style="display: none">
                <svg version="1.1" id="loader-1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                     width="60px" height="60px" viewBox="0 0 50 50" style="enable-background:new 0 0 50 50;" xml:space="preserve">
                      <path fill="#000" d="M25.251,6.461c-10.318,0-18.683,8.365-18.683,18.683h4.068c0-8.071,6.543-14.615,14.615-14.615V6.461z">
                          <animateTransform attributeType="xml"
                                            attributeName="transform"
                                            type="rotate"
                                            from="0 25 25"
                                            to="360 25 25"
                                            dur="0.6s"
                                            repeatCount="indefinite"/>
                      </path>
                  </svg>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        var paginateUrl = "{{ path('paginate_by_tag', {'slug': tag.slug}) }}",
            homeUrl = "{{ path('homepage') }}";
    </script>

    <script type="text/javascript" src="{{ asset('min/js/main.js'|asset_version) }}"></script>
{% endblock %}
