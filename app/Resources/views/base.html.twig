<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ 'photography'|trans }}{% endblock %} | {{ 'photography'|trans }}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('min/css/main.css'|asset_version) }}"/>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

<header>
    <nav id="menu" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href=""><img src="" alt="logo"/></a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#cover" class="page-scroll">Home</a></li>
                    <li><a href="#entries" class="page-scroll">{{ 'gallery'|trans }}</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'languages'|trans }} <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{ path('changeLanguage', {'locale': 'en'}) }}" class="{% if app.request.locale == 'en' %}active{% endif %}">
                                    <span class="flag" style="background-image: url({{ asset('bundles/app/img/layout/icons/en.jpg') }})"></span> {{ 'english'|trans }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('changeLanguage', {'locale': 'de'}) }}" class="{% if app.request.locale == 'de' %}active{% endif %}">
                                    <span class="flag" style="background-image: url({{ asset('bundles/app/img/layout/icons/de.jpg') }})"></span> {{ 'german'|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

{% block cover %}
    <section id="cover">
    </section>
{% endblock %}

{% block content %}
    <section id="content">
    </section>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var paginateUrl = "{{ path('paginate_entries') }}";
    </script>

    <script type="text/javascript" src="{{ asset('min/js/main.js'|asset_version) }}"></script>

    <script type="application/javascript">
        jQuery(document).ready(function() {
        });
    </script>
{% endblock %}
</body>
</html>
