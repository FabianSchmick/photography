{% block metaDesc %}{{ 'site.error'|trans }}{% endblock %}
{% block title %}{{ 'site.error'|trans }}{% endblock %}

{% block cover %}
    <section id="cover" class="parallaxContainer">
        <div class="parallax">
        </div>
    </section>
{% endblock %}
{% block content %}
    <section id="content" class="container error">
        <h1>{{ 'site.error'|trans }}</h1>

        <article class="text-container">
            <p class="text-center">
                {{ 'site.error.explanation.1'|trans }} <a href="{{ path('homepage') }}">{{ 'site.error.explanation.2'|trans }}</a>.
            </p>
        </article>
    </section>
{% endblock %}
