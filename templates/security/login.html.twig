{% extends 'admin.html.twig' %}

{% block title %}{{ 'header.login'|trans }}{% endblock %}

{% block body %}
    <section id="login" class="container text-center">

        {{ form_start(form, {'attr': {'class': 'login-form shadow'}}) }}

            <h1 class="h3 pb-2">{{ 'header.login'|trans }}</h1>

            <hr/>

            {{ form_errors(form) }}

            {{ form_widget(form._username) }}

            {{ form_widget(form._password) }}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-primary btn-block" type="submit" name="login"><i class="fas fa-sign-in-alt"></i> {{ 'btn.login'|trans }}</button>

            <hr/>

            <a href="{{ path('homepage') }}"><i class="fas fa-angle-left pr-2"></i>{{ 'btn.back_to_homepage'|trans }}</a>

        {{ form_end(form) }}
    </section>
{% endblock %}
