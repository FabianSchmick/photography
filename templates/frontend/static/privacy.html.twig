{% extends 'base.html.twig' %}

{% block meta_robots %}<meta name="robots" content="noindex,noarchive,follow">{% endblock %}

{% block title %}{{ 'imprint.privacy.policies'|trans }}{% endblock %}

{% block body_id %}imprint-privacy{% endblock %}

{% block cover %}
    <section id="cover" class="parallax-container">
        <img class="parallax" src="{{ asset('assets/images/layout/cover-placeholder.jpg')|imagine_filter('post_show') }}" alt="{{ 'header.photography'|trans }}"/>
    </section>
{% endblock %}

{% block content %}
    <section id="content" class="container">
        <h1>{{ 'imprint.privacy.policies'|trans }}</h1>

        <address id="imprint" class="text-container text-center" style="padding: 50px 0">
            <p>
                {{ 'imprint.address'|trans|raw }}
            </p>
            <p>
                {{ 'imprint.email.label'|trans }}: <a href="mailto:{{ 'imprint.email.value'|trans }}">{{ 'imprint.email.text'|trans }}</a><br/>
                {{ 'imprint.phone.label'|trans }}: {{ 'imprint.phone.text'|trans }}<br/>
            </p>
        </address>

        <div class="text-container">
            <strong>{{ 'imprint.contradiction.advertising_emails.head'|trans }}</strong>
            <p>
                {{ 'imprint.contradiction.advertising_emails.text'|trans }}
            </p>

            <br/>

            <strong>{{ 'imprint.copyright.head'|trans }}</strong>
            <p>
                {{ 'imprint.copyright.text'|trans }}
            </p>

            <hr/>

            <h2 class="h4">{{ 'privacy.first.head'|trans }}</h2>

            <strong>{{ 'privacy.first.general.head'|trans }}</strong>
            <p>
                {{ 'privacy.first.general.text'|trans|raw }}
            </p>

            <h3 class="h5">{{ 'privacy.first.acquisition.head'|trans }}</h3>

            <strong>{{ 'privacy.first.acquisition.question.first.q'|trans }}</strong>
            <p>
                {{ 'privacy.first.acquisition.question.first.a'|trans|raw }}
            </p>

