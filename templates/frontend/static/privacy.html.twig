                {{ 'privacy.first.acquisition.question.fourth.a'|trans|raw }}
            </p>

            <strong>{{ 'privacy.first.tools.head'|trans }}</strong>
            <p>
                {{ 'privacy.first.tools.text'|trans|raw }}
            </p>

            <h2 class="h4 pt-3">{{ 'privacy.second.head'|trans }}</h2>

            <strong>{{ 'privacy.second.privacy.head'|trans }}</strong>
            <p>
