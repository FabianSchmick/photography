{% block body %}

    <h1 class="h3 mb-4 text-gray-800">{{ 'header.new.author'|trans }}</h1>

    {{ form_start(form, {'action': path('admin_author_new')}) }}

        {{ form_errors(form) }}

        {{ form_widget(form) }}

