{% import 'templates/macro/macro.html.twig' as macro %}
{% extends 'admin.html.twig' %}

{% block title %}{{ 'header.edit'|trans }} - {{ user.fullname }}{% endblock %}

{% block modals %}
    {{ parent() }}
    {{ macro.create_delete_modal('modal.delete.msg.author', user.fullname, deleteForm) }}
{% endblock %}

{% block body %}

    <h1 class="h3 mb-4 text-gray-800">{{ user.fullname }}</h1>

    {{ form_start(form, {'action': path('admin_user_edit', {'id': user.id})}) }}

        {{ form_errors(form) }}

        {{ form_widget(form) }}

        <div class="d-flex justify-content-between">
            <button class="btn btn-success" type="submit" name="submit">{{ 'btn.submit'|trans }}</button>
            <button class="btn btn-danger pull-right" type="button" data-toggle="modal" data-target="#deleteModal">{{ 'btn.delete'|trans }}</button>
        </div>

    {{ form_end(form) }}

{% endblock %}
