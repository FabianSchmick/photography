{% extends 'admin.html.twig' %}

{% block title %}{{ 'header.authors'|trans }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12">

        <div class="page-header">
            <h1>{{ 'header.authors'|trans }}</h1>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>{{ 'label.name'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        {{ loop.index }}
                    </td>
                    <td>
                        {{ user.fullname }}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('admin_user_edit', {'id': user.id}) }}" title="{{ 'btn.edit'|trans }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>

{% endblock %}
